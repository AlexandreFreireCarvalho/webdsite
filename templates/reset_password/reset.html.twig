{% extends 'base.html.twig' %}

{% block title %}Réinisialiser votre mot de passe{% endblock %}

{% block body %}

{{ include("partials/title_section.html.twig", {'name':'Réinisialiser votre mot de passe'}) }}
<div class="login_register_wrap section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-6 col-md-10">
                    <div class="login_wrap">
                        <div class="padding_eight_all bg-white">
                            <div class="heading_s1">
                                <h3>Réinisialiser votre mot de passe</h3>
                            </div>
                            <div class="content">
                            {{ form_start(resetForm) }}
                                    {{ form_row(resetForm.plainPassword) }}
                                    <button class="btn btn-fill-out btn-block">Reset password</button>
                                {{ form_end(resetForm) }}
                            </div>                                
                            <div class="form-note text-center">
                                Nouveau chez Webdsite ? 
                                <a href="{{ path('app_register')}}">
                                    Inscrivez-vous !
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <h1>Reset your password</h1>


{% endblock %}
